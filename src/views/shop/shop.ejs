<div class="shop-principal"  id="shop-principal">
    <section class="shop-groups">
        <section class="shop-products">
            <% items.forEach(function(item) { %>
                <article>
                    <div class="product-wrapper">
                        <div class="product-badge">Nuevo</div> 
                        <a href="">
                            <picture>
                                <img src="<%= item.image %>" alt="<%= item.name %>">
                            </picture>
                            <div>
                                <p class="shop-parrafo"><%= item.category %></p>
                                <h4 class="shop-h4"><%= item.name %></h4>
                                <p class="shop-prix">$ <%= item.price %></p>
                                <p class="shop-cuotas">3 CUOTAS SIN INTERES</p>
                            </div>
                        </a>
                    </div>
                </article>
            <% }); %>
        </section>
    </section>
</div>





